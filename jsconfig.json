{
   "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ES2020",
      "lib": [
         "ES2020"
      ],
      "allowJs": true,
      "checkJs": true,
      "outDir": "./types",
      "declaration": true,
      "noEmit": false,
      "emitDeclarationOnly": true
   },
   "typeAcquisition": {
      "enable": true
   },
   "include": [
      "index.js",
      "./src/**/*.js",
      "t.ts"
   ]
}